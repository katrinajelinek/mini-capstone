<h1>New Recipe</h1>

<form action="/products" method="post">
  <div>Name: <input type="text" name="name" ></div> <br>
  <div>Price: <input type="text" name="price" ></div> <br>
  <div>Description: <input type="text" name="description" ></div> <br>
  <div>Inventory: <input type="text" name="inventory" ></div> <br>
  <div>Supplier_ID: <input type="text" name="supplier_id" ></div> <br>

  <div>
    <label for="supplier_id">Choose a supplier:</label>
    <select name="supplier_id" id="supplier_id">
      <% Supplier.all.each do |supplier|%>
        <option value=<%= supplier.id %>><%= supplier.name %></option>
      <% end %>
    </select> <br> <br>
  </div>
  

    <input type="submit" value="Create Product">
</form>